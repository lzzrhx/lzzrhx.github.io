---
layout: none
---

<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet href="/feed.xsl" type="text/xsl"?>
<feed xmlns="http://www.w3.org/2005/Atom">
<title>{{ site.title }}</title>
<link href="{{ site.url }}{{ site.baseurl }}/feed.xml" rel="self" type="application/atom+xml"/>
<link href="{{ site.url }}{{ site.baseurl }}/" rel="alternate" type="text/html"/>
<updated>{{ site.time | date_to_xmlschema }}</updated>
<id>{{ site.url }}/feed.xml</id>
<icon>/favicon.png</icon>
{% for post in site.posts %}
{% unless post.hidden == true %}
<entry>
<title>{{ post.title }}</title>
<link rel="alternate" href="{{ site.url }}{{ post.url }}"/>
<updated>{{ post.date | date_to_xmlschema }}</updated>
<id>{{ site.url }}{{ site.baseurl }}{{ post.id }}</id>
<summary>
{% if post.image %}<p><img src="{{ site.url }}{{ site.baseurl }}/img/{{ post.image }}" /></p>{% endif %}
{% if post.content contains "<!--summary-->" %}{{ post.content | split: "<!--/summary-->" | first | split: "<!--summary-->" | last | strip | strip_html | xml_escape}}{% else %}{{ post.content | remove_first: '<h3 id="introduction">Introduction</h3>' | strip_html | strip | truncatewords:30 | xml_escape }}{% endif %}
</summary>
{% if post.image %}<media:thumbnail xmlns:media="http://search.yahoo.com/mrss/" url="{{ site.url }}{{ site.baseurl }}/img/{{ post.image }}"/>
<media:content xmlns:media="http://search.yahoo.com/mrss/" medium="image" url="{{ site.url }}{{ site.baseurl }}/img/{{ post.image }}"/>{% endif %}
</entry>{% endunless %}{% endfor %}
</feed>
